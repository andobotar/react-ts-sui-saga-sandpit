{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": ["react", "react-hooks", "@typescript-eslint", "prettier"],
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "airbnb/rules/react",
        "airbnb/rules/react-hooks",
        // "airbnb/rules/react-a11y",
        "airbnb-typescript/base",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:react/recommended",
        "plugin:jest/recommended", // https://github.com/jest-community/eslint-plugin-jest
        "plugin:jest/style",
        "prettier",
        "prettier/@typescript-eslint",
        "prettier/react"
    ],
    "settings": {
        // Append 'ts' and 'tsx' extensions to Airbnb 'import/resolver' setting
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts", ".jsx", ".tsx", ".json"]
            }
        },
        // Append "ts" and "tsx" extensions to Airbnb "import/extensions" setting
        "import/extensions": [".js", ".ts", ".mjs", ".jsx", ".tsx"]
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }],
        "prettier/prettier": ["error"],
        // Imports
        "no-import-assign": "error",
        "no-duplicate-imports": "error",
        "import/no-absolute-path": ["error"],
        // Idents
        "@typescript-eslint/indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        // Quotes
        "@typescript-eslint/quotes": ["error", "single"],
        "quotes": ["off", "single"],

        // TS
        "@typescript-eslint/interface-name-prefix": [
            "error",
            {
                "prefixWithI": "always"
            }
        ],
        "@typescript-eslint/brace-style": ["error"],
        "@typescript-eslint/generic-type-naming": ["error", "^T[A-Z][a-zA-Z]+$"],
        // "@typescript-eslint/member-naming": ["error", { "private": "^_"}],
        "@typescript-eslint/member-ordering": ["error"],
        "@typescript-eslint/explicit-function-return-type": ["off"],
        "@typescript-eslint/no-explicit-any": ["error"],
        "@typescript-eslint/no-use-before-define": ["error", { "functions": false, "classes": false }],
        "max-classes-per-file": ["off"],

        // airbnb bullshits
        "no-console": ["off"],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "prefer-destructuring": ["off"],
        "no-plusplus": ["off"],
        "no-restricted-syntax": ["off"],
        "no-continue": ["off"],
        "class-methods-use-this": ["off"],
        "no-underscore-dangle": ["off"],
        "no-dupe-class-members": ["off"],
        "lines-between-class-members": ["off"],
        // airbnb bullshits ends

        "react-hooks/rules-of-hooks": ["error"], // Checks rules of Hooks
        "react-hooks/exhaustive-deps": ["error"], // Checks effect dependencies,
        "react/prop-types": ["off"],
        "react/destructuring-assignment": ["off"]
    }
}
